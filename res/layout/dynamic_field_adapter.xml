<?xml version="1.0" encoding="utf-8"?>
<com.example.chimerider.util.ModifiableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/dynamic_field_label"
        android:layout_width="0dp"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:text="Hola"
        />
    
    <TextView
        android:id="@+id/dynamic_field_element"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="mundo"
        android:gravity="right"
        />

</com.example.chimerider.util.ModifiableLinearLayout>
