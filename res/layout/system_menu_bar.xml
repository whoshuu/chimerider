<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <Button
        android:id="@+id/menubar_map"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/btn_tab_states_map"
        />

    <Button
        android:id="@+id/menubar_stats"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1" 
        android:background="@drawable/btn_tab_states_stats"
        />
    
    <Button
        android:id="@+id/menubar_users"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/btn_tab_states_user" 
        />

</LinearLayout>